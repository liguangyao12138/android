    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contentProvider.ContentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5.1 内容提供器 ContentProvider"
            android:id="@+id/btn_content_contentProvider"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5.2 内容解析器 ContentResolver"
            android:id="@+id/btn_content_contentResolver"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>